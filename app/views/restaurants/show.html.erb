<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="card">

        <h1 class="text-center"><%= @restaurant.name %></h1>
        <ul class="list-unstyled text-center">
          <li><%= @restaurant.address %></li>
          <li><%= @restaurant.phone_number %></li>
          <li><%= @restaurant.category %></li>
        </ul>

      </div>
      <hr>
      <div class="card">
        <h4 class="text-center">Reviews</h4>
        <% @restaurant.reviews.each do |review| %>
        <ul class="list-unstyled" >
          <li>Rating : <%="*" * review.rating %></li>
          <li><em>Avis : <%= review.content %></em></li>
          <li>Créé le <%= review.created_at.strftime('%d.%m%y') %></li>
        </ul>
        <hr>
        <% end %>
      </div>


      <h5 class=""><strong>Add a new Review</strong></h5>
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.label :rating %> <br> <%=render 'shared/stars' %>
      <%= f.button :submit, class: "btn btn-primary btn-block" %>
      <% end %>


    </div>
  </div>
</div>

